<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.adega.adegamaster.controller.MainController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="872.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
            <children>
                <Label text="Gerenciamento de Produtos - AdegaMaster">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                <ToolBar>
                    <items>
                        <Button mnemonicParsing="false" onAction="#handleNovo" text="Novo" />
                        <Button mnemonicParsing="false" onAction="#handleSalvar" text="Salvar" />
                        <Button mnemonicParsing="false" onAction="#handleExcluir" text="Excluir" />
                        <Separator orientation="VERTICAL" />
                        <Button mnemonicParsing="false" onAction="#handleAbrirCategorias" text="Gerenciar Categorias" />
                        <Separator orientation="VERTICAL" />
                        <TextField fx:id="txtBusca" promptText="Buscar produto/categoria..." />
                        <Button mnemonicParsing="false" onAction="#handleBuscar" text="Buscar" />
                    </items>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </ToolBar>
                <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox prefWidth="300.0" spacing="5.0">
                            <children>
                                <Label text="Nome:" />
                                <TextField fx:id="txtNome" />
                                <Label text="Preço:" />
                                <TextField fx:id="txtPreco" />
                                <Label text="Categoria:" />
                                <ComboBox fx:id="comboTipo" prefWidth="250.0" promptText="Selecione a categoria..." />
                                <Label text="Descrição:" />
                                <TextArea fx:id="txtDescricao" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                            </children>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </VBox>
                        <TableView fx:id="tableProdutos" prefHeight="400.0" prefWidth="600.0" HBox.hgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="columnId" prefWidth="50.0" text="ID" />
                                <TableColumn fx:id="columnNome" prefWidth="150.0" text="Nome" />
                                <TableColumn fx:id="columnPreco" prefWidth="80.0" text="Preço" />
                                <TableColumn fx:id="columnTipo" prefWidth="100.0" text="Categoria" />
                                <TableColumn fx:id="columnDescricao" prefWidth="200.0" text="Descrição" />
                            </columns>
                        </TableView>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>